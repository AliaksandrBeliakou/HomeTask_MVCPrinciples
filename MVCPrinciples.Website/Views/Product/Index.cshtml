@model IEnumerable<MVCPrinciples.Website.Models.ProductVM>

@{
    ViewData["Title"] = "Products";
}
<h1>@ViewData["Title"]</h1>
<table>
    <tr>
        <th>Id</th>
        <th>Product name</th>
        <th>Category</th>
        <th>Suplier</th>
        <th>Price</th>
        <th>Amount</th>
        <th>Quantity</th>
        <th>In order</th>
        <th>Level</th>
        <th>Discontinued</th>
    </tr>
@foreach(var product in Model)
{
    <tr>
        <td class="text-right">@product.Id</td>
        <td class="bigger"><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">@product.Name</a></td>
        <td>@product.Category</td>
        <td>@product.Supplier</td>
        <td class="text-right">@product.UnitPrice?.ToString("#.00")</td>
        <td class="text-right">@product.UnitsInStock</td>
        <td>@product.QuantityPerUnit</td>
        <td class="text-right">@product.UnitsOnOrder</td>
        <td class="text-right">@product.ReorderLevel</td>
        <td class="text-center">
        @if(product.Discontinued)
        {
            <span>&#10004;</span>
        }
        else
        {
            <span>&#10006;</span>
        }
        </td>
    </tr>
}
</table>

@if(!Model.Any())
{
<p>No products yet.</p>
}